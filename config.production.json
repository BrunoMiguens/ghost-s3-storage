{
  "url": "${GHOST_URL}",
  "database": {
    "client": "mysql",
    "connection": {
      "host": "${MYSQL_HOST}",
      "port": "${MYSQL_PORT}",
      "user": "${MYSQL_USER}",
      "password": "${MYSQL_PASSWORD}",
      "database": "${MYSQL_DATABASE}"
    }
  },
  "mail": {
    "transport": "${MAIL_TRANSPORT}",
    "options": {
      "service": "${MAIL_SERVICE}",
      "host": "${MAIL_HOST}",
      "port": "${MAIL_PORT}",
      "auth": {
        "user": "${MAIL_USER}",
        "pass": "${MAIL_PASS}"
      }
    }
  },
  "storage": {
    "active": "ghost-s3",
    "ghost-s3": {
      "endpoint": "${S3_ENDPOINT}",
      "port": "${S3_PORT}",
      "useSSL": "${S3_USE_SSL}",
      "accessKeyId": "${S3_ACCESS_KEY}",
      "secretAccessKey": "${S3_SECRET_KEY}",
      "bucket": "${S3_BUCKET}",
      "region": "${S3_REGION}",
      "forcePathStyle": "${S3_FORCE_PATH_STYLE}"
    }
  },
  "server": {
    "port": 2368,
    "host": "::"
  }
}